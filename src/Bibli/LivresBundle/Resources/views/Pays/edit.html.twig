{# Pays/edit.html.twig #}

<h1>Pays ({{ 'Edition' | trans }})</h1>

<form action="{{ path('pays_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">{{ 'Edit' | trans }}</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('pays') }}">
            {{ 'Return to the list' | trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('pays_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ 'Delete' | trans }}</button>
        </form>
    </li>
</ul>
